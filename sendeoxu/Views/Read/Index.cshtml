@using sendeoxu.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <!--qaynaq oxuma-->
                <div class="qaynaq-read">
                    <div class="qaynaq-read-body">
                        <h1>@ViewBag.qaynaq.title</h1>
                        <ul>
                            <li class="qrb-person">@ViewBag.username.fullname</li>
                            <li class="qrb-date">@ViewBag.qaynaq.date</li>
                            <li class="qrb-file">@ViewBag.category.kateqoriya_name</li>
                        </ul>
                    </div>
                    <div class="qaynaq-text">
                        <p>
                            @Html.Raw(HttpUtility.HtmlDecode(@ViewBag.qaynaq.text))
                        </p>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-body">
                            @if (Session["user"] != null)
                            {
                                if (ViewBag.likedis == 1)
                                {
                                    <div class="qaynaq-read-like">
                                        <button class="btn btn-default" id="likebtn" type="submit" style="background-color:#ccc">
                                            <i class="fa fa-thumbs-o-up" aria-hidden="true" id="iconlike"></i>
                                            <span class="like-count" id="likecount">@ViewBag.like</span>
                                        </button>
                                        <button class="btn btn-default" id="dislikebtn" type="submit">
                                            <i class="fa fa-thumbs-o-down" aria-hidden="true" id="icondislike"></i>
                                            <span class="dislike-count" id="dislikecount">@ViewBag.dislike</span>
                                        </button>
                                    </div>
                                }
                                else if (ViewBag.likedis == 0)
                                {
                                    <div class="qaynaq-read-like">
                                        <button class="btn btn-default" id="likebtn" type="submit">
                                            <i class="fa fa-thumbs-o-up" aria-hidden="true" id="iconlike"></i>
                                            <span class="like-count" id="likecount">@ViewBag.like</span>
                                        </button>
                                        <button class="btn btn-default" id="dislikebtn" type="submit" style="background-color:#ccc">
                                            <i class="fa fa-thumbs-o-down" aria-hidden="true" id="icondislike"></i>
                                            <span class="dislike-count" id="dislikecount">@ViewBag.dislike</span>
                                        </button>
                                    </div>
                                }
                                else
                                {
                                    <div class="qaynaq-read-like">
                                        <button class="btn btn-default" id="likebtn" type="submit">
                                            <i class="fa fa-thumbs-o-up" aria-hidden="true" id="iconlike"></i>
                                            <span class="like-count" id="likecount">@ViewBag.like</span>
                                        </button>
                                        <button class="btn btn-default" id="dislikebtn" type="submit">
                                            <i class="fa fa-thumbs-o-down" aria-hidden="true" id="icondislike"></i>
                                            <span class="dislike-count" id="dislikecount">@ViewBag.dislike</span>
                                        </button>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="qaynaq-read-like">
                                    <button class="btn btn-default" id="likebtn" type="submit" disabled>
                                        <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
                                        <span class="like-count">@ViewBag.like</span>
                                    </button>
                                    <button class="btn btn-default" id="dislikebtn" type="submit" disabled>
                                        <i class="fa fa-thumbs-o-down" aria-hidden="true"></i>
                                        <span class="dislike-count">@ViewBag.dislike</span>
                                    </button>
                                </div>
                            }

                            <div class="qaynaq-read-count">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                                <span class="read-count">@ViewBag.qaynaq.read_count</span>
                            </div>
                        </div>
                    </div>
                    <!--qaynaq şərhlər  -->
                    <div id="disqus_thread"></div>
                    <script>
                    /**
                    *  RECOMMENDED CONFIGURATION VARIABLES: EDIT AND UNCOMMENT THE SECTION BELOW TO INSERT DYNAMIC VALUES FROM YOUR PLATFORM OR CMS.
                    *  LEARN WHY DEFINING THESE VARIABLES IS IMPORTANT: https://disqus.com/admin/universalcode/#configuration-variables*/
                    /*
                    var disqus_config = function () {
                    this.page.url = PAGE_URL;  // Replace PAGE_URL with your page's canonical URL variable
                    this.page.identifier = PAGE_IDENTIFIER; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
                    };
                    */
                    (function() { // DON'T EDIT BELOW THIS LINE
                    var d = document, s = d.createElement('script');
                    s.src = 'https://sendeoxu-az.disqus.com/embed.js';
                    s.setAttribute('data-timestamp', +new Date());
                    (d.head || d.body).appendChild(s);
                    })();
                    </script>
                    <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
                    <script id="dsq-count-scr" src="//sendeoxu-az.disqus.com/count.js" async></script>
                </div>
            </div>
            <div class="col-md-3">
                <!-- Oxşar mövzuda qaynaqlar -->
                <div class="similar-sources">
                    <h3>Oxşar mövzuda qaynaqlar</h3>
                    <div class="similar-sources-body">
                        <div class="list-group">
                            @foreach (Source src in ViewBag.likesource)
                            {
                                if (src.id != Convert.ToInt32(Session["source_id"].ToString()))
                                {
                                    <a href="../../read/index/@src.id" class="list-group-item">@src.title</a>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

